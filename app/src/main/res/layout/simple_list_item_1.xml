<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#FFF"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="150dp">
    <TextView
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@id/image_icon"
        android:gravity="start"
        android:textSize="14dp"
        android:textColor="#000000"
        android:id="@+id/txt_title"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_title"
        android:layout_width="100dp"
        android:id="@+id/image_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="70dp"/>
    <ImageView
        android:id="@+id/like_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="20dp"
        android:src="@drawable/baseline_thumb_up_24"
        android:layout_height="20dp"
        app:tint="#5B000000" />
    <TextView
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/like_icon"
        android:layout_width="wrap_content"
        android:text="10"
        android:id="@+id/txt_like_count"
        android:textSize="15dp"
        android:textColor="#5B000000"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_marginStart="10dp"
        android:id="@+id/comment_icon"
        app:layout_constraintStart_toEndOf="@id/txt_like_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="20dp"
        android:src="@drawable/comment_icon"
        app:tint="#5B000000"
        android:layout_height="20dp"/>
    <TextView
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/comment_icon"
        android:layout_width="wrap_content"
        android:text="10"
        android:id="@+id/comment_count"
        android:textSize="15dp"
        android:textColor="#5B000000"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginStart="10dp"
        android:id="@+id/watch_icon"
        app:layout_constraintStart_toEndOf="@id/comment_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="20dp"
        android:src="@drawable/time_icon"
        app:tint="#5B000000"
        android:layout_height="20dp"/>
    <TextView
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/watch_icon"
        android:layout_width="wrap_content"
        android:text="10 dec 2016"
        android:id="@+id/created_time"
        android:textSize="15dp"
        android:textColor="#5B000000"
        android:layout_height="wrap_content"/>



    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:text="At other"
        android:id="@+id/txt_store"
        android:textSize="15dp"
        android:textColor="#03A9F4"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>